---

import Container from "../components/shared/Container.astro";
import Navitem from "../components/shared/Navitem.astro"

const navItems = [
    {
        href:"#about",
        text:"Nosotros"
    },
    {
        href:"#services",
        text:"Servicios"
    },
    {
        href:"#testimonials",
        text:"Testimonios"
    },
    {
        href:"#contact",
        text:"Contactos"
    },
]
